<!--pages/personmgt/personmgt.wxml-->
<view class="personmgt">
  <view>
    <image class="bg" src="../../static/top-bg.jpg" mode=""></image>
	</view>
  <view class="ftl_contral">
    <view class="ftlcon_title">人员管理</view>
    <view class="ftlcon_box">
      <view class="ftlcon_con" wx:for="{{person}}" wx:key="item">
      <view class="name">{{item.name}}</view>
        <view class="perifm">
          <image src="../../static/{{item.photo}}"></image>
          <view class="per_con">
            <view class="per">性别：<text>{{item.sex}}</text></view>
            <view class="per">电话：<text>{{item.tel}}</text></view>
            <view class="per">职务：<text>{{item.position}}</text></view>
            <view class="per">管理基地：<text>{{item.base}}</text></view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="mytabbar" >
    <tab/>
  </view>
</view>
