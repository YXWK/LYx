/**index.wxss**/

.container {
  background: #f5f5f5;
}

image {
  width: 100%;
}

.weather {
  background-size: 100%;
  width: 100%;
  /* min-height: 160upx; *//* padding: 20upx 10% 120upx 10%; */
  margin: 0 auto;
  position: relative;
  height: 400rpx;
  background: #fff;
}

.bg {
  height: 300rpx;
}

.information {
  display: block;
  width: 80%;
  /* height: 400rpx; */
  overflow: hidden;
  position: absolute;
  top: 20rpx;
  left: 70rpx;
  color: #fff;
}

.ifmTop {
  display: flex;
  justify-content: space-between;
  height: 200rpx;
}

.ifm1 {
  /* height: 300rpx; */
  width: 200rpxï¼›;
}

.ifm2 {
  width: 250rpx;
}

.ifm3 {
  width: 150rpx;
}

.ifm3 image {
  height: 60%;
}

.temperature {
  font-size: 70rpx;
}

.Getcity {
  /* border-right: 1px solid #fff; */
  display: flex;
  font-size: 18rpx;
}

.ifmBot {
  height: 200rpx;
  width: 80%;
  border-radius: 20rpx;
  box-shadow: rgba(0, 0, 0, 0.1) 15rpx 10rpx 15rpx;
  position: relative;
  top: -150rpx;
  left: 70rpx;
  text-align: center;
}

.ifmcon {
  /* padding: 0 100rpx; */
}

.ifmBot .data {
  position: absolute;
  z-index: 20;
  width: 30%;
  top: 30rpx;
  left: 50rpx;
}

.ifmBot .data image {
  width: 60%;
  height: 100rpx;
  display: block;
  margin: 0 auto;
}

.ifmBot .video {
  position: absolute;
  z-index: 20;
  width: 30%;
  top: 30rpx;
  right: 50rpx;
}

.ifmBot .video image {
  width: 60%;
  height: 100rpx;
  display: block;
  margin: 0 auto;
}

.ifmBot image {
  border-radius: 20rpx;
  height: 100%;
}

.main {
  width: 100%;
}

.wd {
  width: 30rpx;
  height: 50rpx;
  float: left;
  margin-left: 20rpx;
}

.marquee {
  width: 100%;
  height: 100rpx;
  /* margin-top: 70rpx; */
  display: flex;
  justify-content: space-between;
  background: #fff;
  overflow-x: scroll;
  overflow-y: hidden;
}

.marquee_box {
  /* width: 240rpx; */
  height: 65rpx;
  border: 1rpx solid #96d1d9;
  border-radius: 30rpx;
  line-height: 65rpx;
  margin: 0 10rpx;
  padding: 0 15rpx;
  flex-shrink: 0;
  white-space: nowrap;
  font-size: 30rpx;
}

.alarm image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 40rpx;
  margin-top: 5rpx;
}
.alarm {
  width: 100%;
  height: 60rpx;
  background: #fff;
  line-height: 60rpx;
  display: flex;
  color: red;
  margin: 10rpx;
  font-size: 26rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.alarm_title{
  display: block;
  width: 100rpx;
  margin-left: 20rpx;
}
.image_notice {
  width: 30rpx;
  height: 30rpx;
  margin-left: 40rpx;
  margin-top: 5rpx;
}

.swiper_container {
  height: 100rpx;
  width: 100%;
}

.swiper_item {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
  padding-top: 20rpx;
}


.myvideo {
