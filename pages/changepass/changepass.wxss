/* pages/changepass/changepass.wxss */
@import "../../components/public/public.wxss";
.content{
  width: 100%;
}
.contraltopimg{
  width: 100%;
  /* height: 500rpx; */
  overflow: hidden;
  position: relative;
  color: #fff;
  background: #fff;
}
.weather{
  width: 100%;
  height: 300rpx;
}
.account{
  position: absolute;
  top: 10rpx;
  left: 150rpx;
  font-size: 40rpx;
}
.sculpture-bg1{
  position: absolute;
  top: 75rpx;
  left: 285rpx;
  width: 210rpx;
  height: 210rpx;
  border-radius: 50%;
  background: rgba(225,225,225,.2);
}
.sculpture-bg2{
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  top:50%;
  left:50%;
  margin-top:-90rpx;
  margin-left:-90rpx;
  border-radius: 50%;
  background: rgba(225,225,225,.5);
}
.sculpture-bg1 image{
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  position: absolute;
  top:50%;
  left:50%;
  margin-top:-75rpx;
  margin-left:-75rpx;
}
.changepass_box{
  width: 80%;
  overflow: hidden;
  margin: 30rpx auto;
}
text{
  display: block;
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}
input,.change{
  display: block;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border: 1rpx solid #D9D9D9;
  border-radius: 10rpx;
  box-sizing: border-box;
  font-size: 20rpx;
  /* text-indent: 16rpx; */
  padding: 0 16rpx;
}
.change{
  margin-top: 50rpx;
  color: #fff;
  background: #409EFE;
  text-align: center;
  font-size: 30rpx;
  border: 0;
}