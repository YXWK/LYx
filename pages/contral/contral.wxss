@import "../../components/public/public.wxss";
.contral-gl{
  width: 100%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  overflow: hidden;
  padding: 10rpx 0;
}
.contral-box{
  width: 40%;
  height: 160rpx;
  text-align: center;
  border: 1rpx solid #D2D8E6;
  padding: 20rpx;
  display: block;
  border-top: 0;
}
.contral-gl :nth-child(2n+1){
  border-left: 0;
}
.contral-gl :nth-child(2n){
  border-right: 0;
  border-left: 0;
}
.contral-gl :nth-child(1){
  border-top: 0;
}
.contral-gl :nth-child(2){
  border-top: 0;
}
.contral-gl :nth-last-child(2){
  border-bottom: 0;
}
.contral-gl :nth-last-child(3){
  border-bottom: 0;
}
.contral-box image{
  width: 25%;
  height: 40%;
  display: block;
  margin:20rpx auto;
}