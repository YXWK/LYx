<!--pages/basemsg/basemsg.wxml-->
<view class="basemsg">
  <view>
    <image class="bg" src="../../static/top-bg.jpg" mode=""></image>
	</view>
  <view class="ftl_contral">
    <view class="ftlcon_title">基地管理</view>
    <view class="ftlcon_box">
      <view class="ftlcon_con" wx:for="{{base}}" wx:key="item">
      <view class="name">{{item.name}}</view>
        <view class="perifm">
          <image src="../../static/{{item.photo}}"></image>
          <view class="per_con">
            <view class="per">基地地址：<text>{{item.address}}</text></view>
            <view class="per">基地面积：<text>{{item.area}}</text></view>
            <view class="per">管理者：<text>{{item.managers}}</text></view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <tab/>
</view>
