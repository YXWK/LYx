.tab-bar {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #4E91C6;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 100;
  /* justify-content: space-around; */
}

