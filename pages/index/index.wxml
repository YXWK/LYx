<!--index.wxml-->
<view class="container">
  <view class="weather">
    <!-- <image class="bg" src="../../static/top-bg.jpg"></image> -->
    <view class="information">
      <view class="ifmTop">
        <view class="ifm1">
          <view class="temperature">17℃</view>
          <view class="Getcity">
            <view>西安 | </view>
            <view>13℃ ~ 19℃</view>
          </view>
        </view>
        <view class="ifm2">
          <view>湿度：
            <text>38%</text>
          </view>
          <view>风速：
            <text>6</text>
          </view>
          <view>光照强度：
            <text>2351</text>
          </view>
        </view>
        <view class="ifm3">
          <image src="../../static/rain.png"></image>
        </view>
      </view>
    </view>
    <view class="ifmBot">
      <!-- <image src="{{msgurl}}datavideobg.jpg"></image> -->
      <view class="ifmcon">
        <view class="data" catchtap="environshow">
          <image src="../../static/data.png"></image>
          环境监测
        </view>
        <view class="video" catchtap="videoshow">
          <image src="../../static/video.png"></image>
          视频监控
        </view>
      </view>
    </view>
  </view>
  <!-- 环境监测 -->
  <view class="main" hidden="{{environment}}">
    <view class="marquee" horizontalScrollPolicy="off">
    <!-- class="marquee_box {{selectd==index?'blue':''}}" -->
      <view class="marquee_box{{item == baseitem?'active':''}}" wx:for="{{list}}" wx:key="item" 
     catchtap="changeblue"  data-classify="{{item}}">{{item}}</view>
    </view>
    <view class='alarm'>
      <image src='../../static/alarm.png' class='image_notice' mode="widthFix"></image>
      <view class="alarm_title">警告:</view>
      <swiper class="swiper_container" vertical="true" autoplay="true" circular="true" interval="3000">
        <block wx:for="{{marqueeList}}" wx:key="index">
          <swiper-item>
            <view class="swiper_item">{{item.name}}</view>
          </swiper-item>
        </block>
      </swiper>
    </view>
    <view class="echarts">
      <view class='echart_wrap'>
        <image class="wd" src="{{msgurl}}wd.png"></image>
        <ec-canvas id="mychart" canvas-id="mychart-line" ec="{{ec}}"></ec-canvas>
      </view>
    </view>
  </view>
  <!-- 视频监控 -->
  <view class="myvideo" hidden="{{video}}">
    <view class="screen">
    <!-- 一屏 -->
      <view class="onevideo" hidden="{{onevideoshow}}">
        <video id="myVideo" src="http://wxsnsdy.tc.qq.com/105/20210/snsdyvideodownload?filekey=30280201010421301f0201690402534804102ca905ce620b1241b726bc41dcff44e00204012882540400&bizid=1023&hy=SH&fileparam=302c020101042530230204136ffd93020457e3c4ff02024ef202031e8d7f02030f42400204045a320a0201000400"
          controls></video>
      </view>
      <!-- 四屏 -->
      <view class="fourvideo" hidden="{{fourvideoshow}}">
        <video class="four_v" src="http://wxsnsdy.tc.qq.com/105/20210/snsdyvideodownload?filekey=30280201010421301f0201690402534804102ca905ce620b1241b726bc41dcff44e00204012882540400&bizid=1023&hy=SH&fileparam=302c020101042530230204136ffd93020457e3c4ff02024ef202031e8d7f02030f42400204045a320a0201000400"
          controls></video>
        <video class="four_v" src="http://wxsnsdy.tc.qq.com/105/20210/snsdyvideodownload?filekey=30280201010421301f0201690402534804102ca905ce620b1241b726bc41dcff44e00204012882540400&bizid=1023&hy=SH&fileparam=302c020101042530230204136ffd93020457e3c4ff02024ef202031e8d7f02030f42400204045a320a0201000400"
          controls></video>
        <video class="four_v" src="http://wxsnsdy.tc.qq.com/105/20210/snsdyvideodownload?filekey=30280201010421301f0201690402534804102ca905ce620b1241b726bc41dcff44e00204012882540400&bizid=1023&hy=SH&fileparam=302c020101042530230204136ffd93020457e3c4ff02024ef202031e8d7f02030f42400204045a320a0201000400"
          controls></video>
        <video class="four_v" src="http://wxsnsdy.tc.qq.com/105/20210/snsdyvideodownload?filekey=30280201010421301f0201690402534804102ca905ce620b1241b726bc41dcff44e00204012882540400&bizid=1023&hy=SH&fileparam=302c020101042530230204136ffd93020457e3c4ff02024ef202031e8d7f02030f42400204045a320a0201000400"
          controls></video>
      </view>
      <text class="screen_styel">分屏模式：</text>
      <view class="{{isone?'one':'of1'}}" catchtap="catchone"></view>
      <view class="{{isfour?'four':'of4'}}" catchtap="catchfour">
        <view class="four_box"></view>
        <view class="four_box"></view>
        <view class="four_box"></view>
        <view class="four_box"></view>
      </view>
    </view>
    <view class="choosebase">
      <view>选择基地：</view>
      <text class="basebox{{item == basebox?'active':''}}" data-classify="{{item}}" wx:for="{{base}}" wx:key="item" catchtap="changebase">{{item}}</text>
    </view>
  </view>
</view>