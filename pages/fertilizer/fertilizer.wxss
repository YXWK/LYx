/* pages/fertilizer/fertilizer.wxss */
@import "../../components/public/public.wxss";
.fertilizer{
  background: #F5F5F5;
  overflow: hidden;
}
.ftl_contral{
  font-size: 26rpx;
}
.ftlcon_title{
  background: #fff;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 50rpx;
  color: #2a3471;
  font-size: 36rpx;
}
.ftlcon_box{
  width: 100%;
  background: #fff;
  overflow: hidden;
  margin-top: 10rpx;
}
.ftlcon_con{
  width: 90%;
  overflow: hidden;
  border: 1px solid #6fbecb;
  margin: 20rpx auto 0;
  /* padding: 24rpx; */
  border-radius: 10rpx;
}
.ftlcon_name{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  text-indent: 10rpx;
  background: #010125;
  color: #fff;
}
.ftl_ifm{
  width: 90%;
  margin: 0 auto;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  padding-top: 24rpx;
}
.ftl_ifmleft{
  width: 120rpx;
  height: 110rpx;
  padding-top: 30rpx;
}
.ftl_ifmright{
  width: 400rpx;
  overflow: hidden;
}
.ifm{
  line-height: 40rpx;
}
.wx-switch-input{width:70rpx !important;height:30rpx !important;}
.wx-switch-input::before{width:28rpx !important;height: 28rpx !important;}
.wx-switch-input::after{width: 28rpx !important;height: 28rpx !important;}
.btn{
  width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  border: 1px solid #2a93ff;
  border-radius: 10rpx;
  float: right;
  background: #409efe;
  color: #fff;
  text-align: center;
  margin: 24rpx;
  margin-left: 0;
  font-size: 24rpx;
}
.log{
  color:#91949b;
  background: #f1f2f6;
  border: 1px solid #d3d4d6;
}